{# templates/admin/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin Panel{% endblock %}</title>

    {# Bootstrap CSS and AdminLTE-like styles #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="{{ asset('css/admin-custom.css') }}" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="bg-dark text-white p-3 flex-shrink-0" style="width: 250px; min-height: 100vh;">
            <h3 class="text-center">Admin Panel</h3>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" href="{{ path('admin_dashboard') }}">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="{{ path('app_product_index') }}">
                        <i class="fas fa-box"></i> Products
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="{{ path('app_category_index') }}">
                        <i class="fas fa-tags"></i> Categories
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="{{ path('app_order_index') }}">
                        <i class="fas fa-shopping-cart"></i> Orders
                    </a>
                </li>

              {#   <li class="nav-item">
                    <a class="nav-link text-white" href="{{ path('back_user_index') }}">
                        <i class="fas fa-users"></i> Users
                    </a>
                </li> #}
                <li class="nav-item">
                    <a class="nav-link text-white" href="{{ path('app_logout') }}">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4">
            <header class="d-flex justify-content-between align-items-center bg-light p-3 mb-4 rounded">
                <h1>{% block page_title %}Dashboard{% endblock %}</h1>
                <div>
                    <span class="badge bg-success">Admin</span>
                </div>
            </header>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            {% block body %}{% endblock %}
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-dark text-white text-center">
        <div class="container">
            <span>&copy; {{ "now"|date("Y") }} Admin Panel | Powered by Symfony</span>
        </div>
    </footer>

    {# Bootstrap JS + Popper.js and FontAwesome #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>

    {% block javascripts %}{% endblock %}
</body>
</html>
