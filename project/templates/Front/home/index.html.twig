{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}


{% block body %}
    <div class="container">
        <h1 class="store-title">Welcome to Our Store</h1>

        <div class="categories">
            <h2 class="section-title">Categories</h2>
            <div class="row">
                {% for category in categories %}
                    <div class="col-md-3">
                        <div class="card category-card">
                            {% if category.image %}
                                <img src="{{ asset('uploads/' ~ category.image) }}" class="card-img-top" alt="{{ category.name }}">
                            {% else %}
                                <img src="{{ asset('images/default-category.jpg') }}" class="card-img-top" alt="Default Category Image">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ category.name }}</h5>
                                <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-primary">View Products</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>No categories available.</p>
                {% endfor %}
            </div>
        </div>

        <div class="product-list">
            <h2 class="section-title">Latest Products</h2>
            <div class="row">
                {% for product in products %}
                    <div class="col-md-3">
                        <div class="card product-card">
                            {% if product.image %}
                                <img src="{{ asset('uploads/' ~ product.image) }}" class="card-img-top" alt="{{ product.name }}">
                            {% else %}
                                <img src="{{ asset('images/default-product.jpg') }}" class="card-img-top" alt="Default Product Image">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <p class="card-text">{{ product.description }}</p>
                                <p class="card-text">Price: {{ product.price }}</p>
                                <p class="card-text">Stock: {{ product.stock }}</p>
                                <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>No products available.</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}


